/* pages/video/browse.wxss */
video {
    width: 100%;
    height: 372rpx;
    border-radius: 4rpx;
    box-shadow: 0 2rpx 4rpx #000000;
}

.video-list {
    margin: 24rpx;
    padding: 24rpx 20rpx;
    background-color: #ffffff;
}

.video .divider {
    width: 95%;
    height: 1rpx;
    color: #D8D8D8;
    margin: 24rpx auto;
}

.video .cover-img {
    position: absolute;
    z-index: 100;
    width: 662rpx;
    height: 372rpx;
}

.video .title-group {
    position: absolute;
    width: 622rpx;
    margin: 20rpx 20rpx 0 20rpx;
    font-size: 32rpx;
    color: #ffffff;
    line-height: 42rpx;
    z-index: 200;
}

.video .title-group .icon {
    display: inline-flex;
    width: 32rpx;
    height: 32rpx;
    vertical-align:middle;
    margin-right: 8rpx;
    margin-bottom: 8rpx;
}

.video .title-group .title {
    display: inline-flex;
    word-break: break-all;
    word-wrap: break-word;
    white-space: pre-line;
}

.video .title-group .title-icon {
    width: 590rpx;
    display: inline-flex;
    word-break: break-all;
    word-wrap: break-word;
    white-space: pre-line;
}

.video .play-btn {
    position: absolute;
    width: 96rpx;
    height: 96rpx;
    margin: 138rpx 0 0 283rpx;
    z-index: 200;
}

.video .ext {
    margin-top: 16rpx;
    display: flex;
    justify-content: space-between;
}

.video .ext .left .avatar {
    font-size: 40rpx;
    width: 40rpx;
    height: 40rpx;
    background-color: #f3f3f3;
    border-radius: 4rpx;
    color: #999999;
}

.video .ext .left .author {
    margin-left: 12rpx;
    font-size: 28rpx;
    line-height:40rpx;
    color: #333333;
    font-weight: bold;
}

.video .ext .left .source {
    margin-left: 24rpx;
    text-align: center;
    font-size: 24rpx;
    height: 30rpx;
    color: #0049FF;
    background-color: #E0E9FF;
    padding:3rpx 6rpx;
    border-radius: 2rpx;
}

.video .ext .right .play-amount {
    vertical-align: middle;
    display: inline-block;
}

.video .ext .right .play-amount .icon {
    vertical-align: middle;
    width: 24rpx;
    height: 24rpx;
}

.video .ext .right .play-amount .amount {
    vertical-align: middle;
    color: #999999;
    margin-left: 8rpx;
}

.video .ext .right .comments-group {
    margin-left: 12rpx;
    vertical-align: middle;
    display: inline-block;
}

.video .ext .right .comments-group .icon {
    vertical-align: middle;
    color: #999999;
}

.video .ext .right .comments-group .comments {
    vertical-align: middle;
    color: #999999;
    margin-left: 8rpx;
}

.sort {
    overflow:hidden;
}
.sort .right {
    float:right;
    margin-right:48rpx;
    background-color:#f5f5f5;
    padding:10rpx;
}
