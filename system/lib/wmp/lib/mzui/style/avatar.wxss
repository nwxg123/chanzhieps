.avatar {
    display: inline-flex;
    overflow: hidden;
    width: 60rpx;
    height: 60rpx;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    vertical-align: middle;
    background-position: center;
    background-size: cover;
}
.avatar img {
    display: block;
    width: 100%;
    height: 100%;
    margin: 0;
}
.avatar-sm {
    width: 40rpx;
    height: 40rpx;
    font-size: 30rpx;
}
.avatar-lg {
    width: 80rpx;
    height: 80rpx;
    font-size: 60rpx;
}
.avatar-lg > .icon {
    font-size: 42rpx;
}
.avatar-xl {
    width: 160rpx;
    height: 160rpx;
    font-size: 120rpx;
}
.avatar-xl > .icon {
    font-size: 118rpx;
}
