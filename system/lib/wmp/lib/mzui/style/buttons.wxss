.btn {
    display: inline-flex;
    font-weight: normal;
    text-align: center;
    cursor: pointer;
    border: 2rpx solid transparent;
    white-space: nowrap;
    user-select: none;
    color: inherit;
    background: transparent;
    justify-content: center;
    align-items: center;
    white-space: pre-line;
    min-width: 60rpx;
    height: 60rpx;
    font-size: 28rpx;
    padding: 0 20rpx;
    line-height: 56rpx;
}
.btn.circle,
.btn.circle:after {
    border-radius: 30rpx !important;
}
.btn-lg {
    min-width: 80rpx;
    height: 80rpx;
    font-size: 36rpx;
    padding: 0 20rpx;
    line-height: 76rpx;
}
.btn-lg.circle,
.btn-lg.circle:after {
    border-radius: 40rpx !important;
}
.btn-sm {
    min-width: 48rpx;
    height: 48rpx;
    font-size: 24rpx;
    padding: 0 20rpx;
    line-height: 44rpx;
}
.btn-sm.circle,
.btn-sm.circle:after {
    border-radius: 24rpx !important;
}
.btn-xs {
    min-width: 40rpx;
    height: 40rpx;
    font-size: 24rpx;
    padding: 0 20rpx;
    line-height: 36rpx;
}
.btn-xs.circle,
.btn-xs.circle:after {
    border-radius: 20rpx !important;
}
.btn-icon {
    padding-left: 0;
    padding-right: 0;
}
.btn-wide {
    min-width: 160rpx;
}
.btn.block {
    width: 100%;
}
.btn.block + .btn.block {
    margin-top: 20rpx;
}
.btn > .label {
    position: relative;
    top: -2rpx;
}
.btn .icon + .text {
    margin-left: 16rpx;
}
